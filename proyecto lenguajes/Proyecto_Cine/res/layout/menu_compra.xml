<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/fondo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fondo2" >
    </ImageView>

    <ImageView
        android:id="@+id/grupo_canguil"
        android:layout_width="168dp"
        android:layout_height="44dp"
        android:layout_x="72dp"
        android:layout_y="26dp"
        android:src="@drawable/botoncanguil" />

    <ImageView
        android:id="@+id/grupo_bebidas"
        android:layout_width="172dp"
        android:layout_height="52dp"
        android:layout_x="74dp"
        android:layout_y="100dp"
        android:src="@drawable/botonbebida" />

    <ImageView
        android:id="@+id/genera_pedido"
        android:layout_width="171dp"
        android:layout_height="45dp"
        android:layout_x="78dp"
        android:layout_y="184dp"
        android:src="@drawable/botonhecho" />

    <TextView
        android:id="@+id/saldo_disponible_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_x="6dp"
        android:layout_y="255dp"
        android:text="Saldo Disponible "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="8dp"
        android:layout_y="296dp"
        android:text="Total del Pedido"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/saldo_disponible_valor"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_x="216dp"
        android:layout_y="258dp"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/total_valor"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_x="216dp"
        android:layout_y="300dp"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
</AbsoluteLayout>